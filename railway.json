{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python312", "gcc"]
        },
        "install": {
          "cmds": [
            "python3.12 -m venv /opt/venv --clear",
            ". /opt/venv/bin/activate",
            "pip install --upgrade pip",
            "pip install -r requirements.txt"
          ]
        }
      },
      "startCommand": ". /opt/venv/bin/activate && python bot.py"
    }
  }
}
